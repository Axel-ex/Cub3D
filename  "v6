#include "../../includes/cub3D.h"

void	my_mlx_pixel_put(int x, int y, int color)
{
	t_data	*data;
	char	*dst;
	
	data = game()->pixel;
	dst = data->addr + (y * data->line_length + x * (data->bits_per_pixel / 8));
	*(unsigned int *)dst = color;
}

void	draw_square(int x, int y, int width, int color)
{
	int	i;
	int	j;

	i = x;
	if ((x + width > SCREEN_W || x < 0) && (y + width > SCREEN_H || y < 0))
		return ;
	while (i < y + width)
	{
		j = x;
		while (j < x + width)
		{
			my_mlx_pixel_put(i, j, color);
			j++;
		}
		i++;
	}
	for (int i = 0; i < 50; i++)
		my_mlx_pixel_put(i, 0, GREEN);
	mlx_put_image_to_window(game()->mlx, game()->mlx_win, game()->pixel->img, x, y);

}
